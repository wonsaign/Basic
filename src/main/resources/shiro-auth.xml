<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context  
    http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="com.jdab.platform.shiro" />

	<!--注入自定义sessionManager -->
 	<bean id="jdabSessionManager" class="com.jdab.platform.shiro.manager.JdabSessionManager">
	</bean> 
	
	<!-- Shiro Cache Manager -->
	<bean id="shiroCacheManager" class="org.apache.shiro.cache.ehcache.EhCacheManager"
		scope="singleton">
	</bean>
	<!--注入自定义的Realm -->
	<bean id="jdabRealm" class="com.jdab.platform.shiro.realm.JdabRealm">
		<property name="cacheManager" ref="shiroCacheManager" />
	</bean>
	
	<bean id="formAuthenticationFilter" class="com.jdab.platform.shiro.filter.JdabFormAuthenticationFilter">
	</bean>
	
	<!-- Shiro Security Manage -->
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="jdabRealm" />
		<property name="sessionManager" ref="jdabSessionManager" />
	</bean>

	<bean id="anyRolesFilter"
		class="com.jdab.platform.shiro.realm.AnyRolesAuthorizationFilter" />

	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager" />
		<property name="loginUrl" value="/login.action" />
		<property name="successUrl" value="/index.action" />
		<property name="unauthorizedUrl" value="/" />
		<!-- 以下可以从数据为取出 -->
 		<property name="filters">
			<map>
				<entry key="anyRoles" value-ref="anyRolesFilter"></entry>
				<entry key="authc" value-ref="formAuthenticationFilter" />
			</map>
		</property> 
		<!-- 自定义filter配置 -->
<!-- 		<property name="filters">
			<map>
				将自定义 的FormAuthenticationFilter注入shiroFilter中
				<entry key="authc" value-ref="formAuthenticationFilter" />
			</map>
		</property> -->
		<property name="filterChainDefinitions">
			 <!-- 
				anon:不需要登陆可以访问;
				authc:需要认证身份才可以访问
			 -->
			<value>
				/screen/*.action = anon
				/login.action=anon
				/alarm/**=anon
			 	/*/* = authc   
			</value>
		</property>
	</bean>
	
<!-- 
	开启shiro的注解  而且在MVC中必须配置到 springMVC.xml配种中，它才会被扫描到
 	<bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor" />
	
	<bean id="advisorAutoProxyCreator"
		class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"
